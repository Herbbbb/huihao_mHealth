<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical" >
  
    <FrameLayout 
	        android:id="@+id/main_tab_banner"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip" >
        
	     <TextView
	            android:id="@+id/workplan_back"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:focusable="true"
	            android:layout_gravity="left|center_vertical"
	            android:padding="8dip"
	            android:text="返回" />
	    <TextView 
	        android:textSize="18.0sp"
	        android:textColor="@android:color/white"
	        android:background="#000000"
	        android:padding="12.0dip"
	        android:layout_width="wrap_content"
	        android:layout_height="46.0dip"
	        android:layout_gravity="center"
	        android:text="添加预购信息"/>
	    <TextView
	            android:id="@+id/workplan_save"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:clickable="true"
	            android:focusable="true"
	            android:layout_gravity="right|center_vertical"
	            android:padding="8dip"
	            android:text="保存" />
	    
	</FrameLayout>
    
    
    <ScrollView 
        
    android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical" 
    android:background="@color/base_bg"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:layout_weight="1.0">
    
      	<LinearLayout 
      	android:background="@color/base_bg"
      	android:orientation="vertical" 
      	android:paddingBottom="10.0dip" 
      	android:layout_width="fill_parent" 
      	android:layout_height="fill_parent" 
      	android:isScrollContainer="true">
      	
      	
      		<!-- 第一个白框BEGIN -->
     	 	<LinearLayout 
			android:gravity="center_vertical" 
			android:orientation="vertical" 
			android:background="@drawable/shape_bg" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="10.0dip" 
			android:layout_marginTop="7.0dip" 
			android:layout_marginRight="10.0dip">
			
				<LinearLayout 
				    android:gravity="center_vertical" 
				    android:orientation="horizontal" 
				    android:layout_width="fill_parent" 
				    android:layout_height="50.0dip">
				    
			        <TextView 
			            android:textSize="18.0sp" 
			            android:textColor="@android:color/black" 
			            android:paddingLeft="15.0dip" 
			            android:layout_width="0.0dip" 
			            android:layout_height="wrap_content" 
			            android:text="经销商名称" android:layout_weight="1.0" />
        
    			</LinearLayout>
    
			    <View 
				    android:background="@drawable/shape_line" 
				    android:layout_width="fill_parent"
					android:layout_height="1.0px" />
			    
			    <LinearLayout 
				    android:gravity="center_vertical" 
				    android:orientation="horizontal" 
				    android:layout_width="fill_parent" 
				    android:layout_height="50.0dip">
			        
			        <TextView
			            android:id="@+id/workplan_name" 
			            android:textSize="18.0sp" 
			            android:textColor="#ff545454"  
			            android:paddingLeft="15.0dip" 
			            android:layout_width="0.0dip" 
			            android:layout_height="wrap_content" 
			            android:text="武汉市第一人民医院" android:layout_weight="1.0" />
			    </LinearLayout>
	           
	           <View 
			           android:background="@drawable/shape_line" 
			           android:layout_width="fill_parent" 
			           android:layout_height="1.0px" />
		           
		        <LinearLayout 
				    android:gravity="center_vertical" 
				    android:orientation="horizontal" 
				    android:layout_width="fill_parent" 
				    android:layout_height="50.0dip">
    
		        <TextView 
			        android:textSize="18.0sp" 
			        android:textColor="@android:color/black" 
			        android:paddingLeft="15.0dip" 
			        android:layout_width="0.0dip" 
			        android:layout_height="wrap_content"
			        android:text="时间" 
			        android:layout_weight="1.0" />
		         
		        <TextView 
		            android:id="@+id/workplan_data"
			        android:text="2013-7-11" 
			        android:textSize="18.0sp" 
			        android:textColor="#ff545454" 
			        android:layout_width="0.0dip" 
			        android:layout_height="wrap_content"
			        android:layout_weight="4.0" />
		    </LinearLayout>
    
		    <View 
			    android:background="@drawable/shape_line" 
			    android:layout_width="fill_parent"
				android:layout_height="1.0px" />
		    
		   	<LinearLayout 
				    android:gravity="center_vertical" 
				    android:orientation="horizontal" 
				    android:layout_width="fill_parent" 
				    android:layout_height="50.0dip">
		        <TextView 
			        android:textSize="18.0sp" 
			        android:textColor="@android:color/black" 
			        android:paddingLeft="15.0dip" 
			        android:layout_width="0.0dip" 
			        android:layout_height="wrap_content"
			        android:text="状态" 
			        android:layout_weight="3.0" />
		        
		        <RadioGroup 
		            android:id="@+id/workplan_group"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_weight="1.0" >
		        	<RadioButton 
		        	    android:id="@+id/workplan_TAG0"
		        	    android:layout_width="wrap_content"
		            	android:layout_height="wrap_content"
		            	android:checked="true"
		            	android:text="待访"
		            	android:textColor="#ff545454"/>
		        	<RadioButton 
		        	    android:id="@+id/workplan_TAG1"
		        	    android:layout_width="wrap_content"
		            	android:layout_height="wrap_content"
		            	android:text="拜访"
		            	android:textColor="#ff545454"/>
		        	<RadioButton 
		        	    android:id="@+id/workplan_TAG2"
		        	    android:layout_width="wrap_content"
		            	android:layout_height="wrap_content"
		            	android:text="预购"
		            	android:textColor="#ff545454"/>
		        </RadioGroup>
		    </LinearLayout>
	           
		   	<View 
			    android:background="@drawable/shape_line" 
			    android:layout_width="fill_parent"
				android:layout_height="1.0px" />
		   	
           	<LinearLayout 
               android:gravity="center_vertical" 
               android:orientation="horizontal" 
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content" 
               android:padding="10.0dip" 
               android:minHeight="50.0dip">
               
                    <TextView 
                        android:textSize="18.0sp" 
                        android:textColor="@android:color/black" 
                        android:paddingLeft="5.0dip" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="预购药品名称" />
                    
                       
             </LinearLayout>
             
           	<View 
			    android:background="@drawable/shape_line" 
			    android:layout_width="fill_parent"
				android:layout_height="1.0px" />
           	<LinearLayout 
				    android:gravity="center_vertical" 
				    android:orientation="horizontal" 
				    android:layout_width="fill_parent" 
				    android:layout_height="50.0dip">
                    
           	    <EditText 
	                    android:id = "@+id/workplan_yaoming"
	                    android:textSize="18.0sp" 
	                    android:textColor="#ff545454" 
	                    android:layout_marginLeft="15.0dip" 
	                    android:layout_marginRight="10.0dip" 
	                    android:layout_width="0.0dip"
	                    android:layout_height="wrap_content"                                
	                    android:maxLines="1"
	                    android:maxLength="10"
	      				android:background="@android:color/white"
	      				android:layout_weight="1.0"/>
            </LinearLayout>
	        
           	<View 
			    android:background="@drawable/shape_line" 
			    android:layout_width="fill_parent"
				android:layout_height="1.0px" />
		   	
           	<LinearLayout 
               android:gravity="center_vertical" 
               android:orientation="horizontal" 
               android:layout_width="fill_parent" 
               android:layout_height="wrap_content" 
               android:padding="10.0dip" 
               android:minHeight="50.0dip">
               
                    <TextView 
                        android:textSize="18.0sp" 
                        android:textColor="@android:color/black" 
                        android:paddingLeft="5.0dip" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" 
                        android:text="预购药品数量" />
                    
                       
             </LinearLayout>
             
           	<View 
			    android:background="@drawable/shape_line" 
			    android:layout_width="fill_parent"
				android:layout_height="1.0px" />
           	<LinearLayout 
				    android:gravity="center_vertical" 
				    android:orientation="horizontal" 
				    android:layout_width="fill_parent" 
				    android:layout_height="50.0dip">
                    
           	    <EditText 
	                    android:id = "@+id/workplan_yaopinnum"
	                    android:textSize="18.0sp" 
	                    android:textColor="#ff545454" 
	                    android:layout_marginLeft="15.0dip" 
	                    android:layout_marginRight="10.0dip" 
	                    android:layout_width="0.0dip"
	                    android:layout_height="wrap_content"                                
	      				android:background="@android:color/white"
	      				android:layout_weight="1.0"/>
            </LinearLayout>
	           
	        </LinearLayout>
	        <!-- 第一个白框end -->
         	
        </LinearLayout> 
        
    </ScrollView>
  

</LinearLayout>

